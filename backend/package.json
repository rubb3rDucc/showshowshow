{
  "name": "backend",
  "version": "1.0.0",
  "description": "ShowShowShow Backend API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate:up": "tsx src/migrations/runner.ts up",
    "migrate:down": "tsx src/migrations/runner.ts down",
    "migrate:setup": "tsx src/migrations/setup-migration-tracking.ts",
    "migrate:mark": "tsx src/migrations/mark-migration-complete.ts",
    "migrate:fix-table": "tsx src/migrations/fix-migration-table.ts",
    "migrate:timezone": "tsx src/migrations/add-timezone-manually.ts",
    "migrate:clean": "tsx src/migrations/clean-migration-table.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:unit": "TEST_TYPE=unit vitest run",
    "test:integration": "TEST_TYPE=integration vitest run tests/toonami.test.ts",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.23.0",
  "pnpm": {
    "overrides": {
      "esbuild": "^0.27.1"
    }
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@types/ms": "^2.1.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.6.1",
    "fastify": "^5.6.2",
    "jsonwebtoken": "^9.0.3",
    "kysely": "^0.28.8",
    "ms": "^2.1.3",
    "pg": "^8.16.3",
    "pino-pretty": "^13.1.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@vitest/coverage-v8": "2.1.9",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^2.1.0"
  }
}
