{
  "name": "backend",
  "version": "1.0.0",
  "description": "ShowShowShow Backend API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:prod": "pnpm install --prod=false && pnpm run build",
    "start": "node dist/index.js",
    "migrate:up": "tsx src/migrations/runner.ts up",
    "migrate:down": "tsx src/migrations/runner.ts down",
    "migrate:inspect": "tsx src/migrations/migrate-utils.ts inspect",
    "migrate:sync": "tsx src/migrations/migrate-utils.ts sync",
    "migrate:mark": "tsx src/migrations/migrate-utils.ts mark",
    "migrate:clean": "tsx src/migrations/migrate-utils.ts clean",
    "migrate:verify": "tsx src/migrations/migrate-utils.ts verify",
    "refresh:all": "tsx src/scripts/refresh-all-content.ts",
    "refresh:force": "tsx src/scripts/refresh-all-content.ts --force",
    "refresh:retry": "tsx src/scripts/refresh-all-content.ts --retry",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:unit": "TEST_TYPE=unit vitest run",
    "test:integration": "TEST_TYPE=integration vitest run tests/toonami.test.ts",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@9.15.0",
  "pnpm": {
    "overrides": {
      "esbuild": "^0.27.1"
    }
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "@types/ms": "^2.1.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.3",
    "kysely": "^0.28.9",
    "ms": "^2.1.3",
    "pg": "^8.16.3",
    "pino-pretty": "^13.1.3",
    "posthog-node": "^5.17.2",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/ioredis": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.2",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "4.0.15",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
