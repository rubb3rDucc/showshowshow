---
import Layout from "../layouts/Layout.astro";
import "../styles/home.css";

const title = "ShowShowShow - Schedule your TV watching";
const description =
  "Decide what you're watching ahead of time. Build viewing schedules for TV shows, anime, and movies.";
const appUrl = import.meta.env.PUBLIC_APP_URL || "https://app.showshowshow.app";
---

<Layout title={title} description={description}>
  <div class="page">
    <header class="nav">
      <div class="nav-container">
        <a class="brand" href="/">ShowShowShow</a>
        <a class="btn primary nav-cta-btn" href={appUrl}>Login</a>
      </div>
    </header>

    <div class="content">
      <main>
        <section class="hero">
          <div class="hero-text reveal" style="animation-delay: 0.05s;">
            <h1>Decide what you're watching before you sit down.</h1>
            <p class="lead">
              Schedule shows and movies into time slots. Skip the browsing.
            </p>
            <p class="subtext">
              Early version. Sign-in required to save schedules.
            </p>
            <div class="hero-actions">
              <a class="btn primary" href={appUrl}>Go to app</a>
            </div>
          </div>
          <div class="hero-media reveal" style="animation-delay: 0.15s;">
            <div class="device-mockup">
              <div class="desktop-frame">
                <div class="desktop-titlebar">
                  <span class="traffic-light red"></span>
                  <span class="traffic-light yellow"></span>
                  <span class="traffic-light green"></span>
                </div>
                <video
                  autoplay
                  muted
                  loop
                  playsinline
                  poster="/images/new_8.png"
                >
                  <source src="/videos/new_30_sec_demo.mp4" type="video/mp4" />
                </video>
              </div>
              <!-- Phone mockup hidden until mobile demo video is available
              <div class="device device-iphone-14-pro device-spacer">
                <div class="device-frame">
                  <img
                    class="device-screen"
                    src="/images/new_6.png"
                    alt="ShowShowShow mobile view"
                    loading="lazy"
                  />
                </div>
                <div class="device-stripe"></div>
                <div class="device-header"></div>
                <div class="device-sensors"></div>
                <div class="device-btns"></div>
                <div class="device-power"></div>
              </div>
              -->
            </div>
          </div>
        </section>

        <section
          id="how"
          class="section reveal"
          style="animation-delay: 0.05s;"
        >
          <div class="metro-tiles">
            <div class="metro-tile blue">
              <span class="tile-num">1</span>
              <h3>Add shows to library</h3>
              <p>Search TV, anime, movies</p>
            </div>
            <div class="metro-tile green">
              <span class="tile-num">2</span>
              <h3>Build a queue</h3>
              <p>Add shows in order</p>
            </div>
            <div class="metro-tile yellow">
              <span class="tile-num">3</span>
              <h3>Generate a schedule</h3>
              <p>Pick time. Auto-fill.</p>
            </div>
            <div class="metro-tile purple">
              <span class="tile-num">4</span>
              <h3>Watch & mark done</h3>
              <p>Check off. Stay synced.</p>
            </div>
          </div>
        </section>
      </main>

      <footer>
        <span>&copy; {new Date().getFullYear()} ShowShowShow</span>
        <span class="footer-pricing">Free for 7 days, then $5/month</span>
        <div class="footer-links">
          <a href="/privacy">Privacy</a>
          <a href="/terms">Terms</a>
          <a href="/contact">Contact</a>
        </div>
        <a
          href="https://www.themoviedb.org/"
          target="_blank"
          rel="noopener noreferrer"
          class="tmdb-attribution"
        >
          <img
            src="https://www.themoviedb.org/assets/2/v4/logos/v2/blue_short-8e7b30f73a4020692ccca9c88bafe5dcb6f8a62a4c6bc55cd9ba82bb2cd95f6c.svg"
            alt="Powered by TMDB"
            height="12"
          />
        </a>
      </footer>
    </div>
  </div>
</Layout>
