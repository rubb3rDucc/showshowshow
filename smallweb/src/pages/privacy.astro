---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import '../styles/global.css';

const title = 'Privacy Policy - ShowShowShow';
const description = 'Privacy Policy for ShowShowShow';
---

<Layout title={title} description={description}>
  <div class="min-h-screen bg-brutal-gray text-black font-mono selection:bg-black selection:text-pastel-mint">
    <Header />
    
    <main class="max-w-4xl mx-auto px-4 py-16 md:py-24">
      <div class="bg-white border-4 border-black p-8 md:p-12 shadow-hard">
        <h1 class="text-3xl md:text-4xl font-black uppercase mb-6 border-b-4 border-black pb-4">
          Privacy Policy
        </h1>
        
        <div class="space-y-6 text-sm md:text-base leading-relaxed">
          <div class="bg-pastel-yellow border-4 border-black p-4 font-bold">
            <p class="font-mono text-xs uppercase mb-2">PLACEHOLDER</p>
            <p>This is a placeholder Privacy Policy page. Content will be added separately.</p>
          </div>
          
          <p class="font-bold">
            Last updated: {new Date().toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
          </p>
        </div>
        
        <div class="mt-8 pt-6 border-t-4 border-black">
          <a
            href="/"
            class="inline-block bg-black text-white px-6 py-3 font-bold uppercase hover:bg-pastel-mint hover:text-black transition-colors border-2 border-black"
          >
            ‚Üê Back to Home
          </a>
        </div>
      </div>
    </main>
  </div>
</Layout>

