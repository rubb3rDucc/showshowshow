---
import Layout from '../layouts/Layout.astro';
import '../styles/home.css';

const title = 'Privacy Policy - ShowShowShow';
const description = 'Privacy Policy for ShowShowShow';
const appUrl = import.meta.env.PUBLIC_APP_URL || 'https://app.showshowshow.com';
---

<Layout title={title} description={description}>
  <div class="page">
    <header class="nav">
      <div class="nav-container">
        <a class="brand" href="/">ShowShowShow</a>
        <div class="nav-menu">
          <nav class="nav-links">
            <a href="/">Home</a>
            <a href="/terms">Terms</a>
            <a href="/contact">Contact</a>
          </nav>
          <a class="btn primary nav-cta-btn" href="/#waitlist">Join waitlist</a>
        </div>
      </div>
    </header>

    <div class="content">
      <main class="section">
        <div class="card" style="max-width: 720px; margin: 0 auto;">
          <h1 style="margin: 0 0 16px; font-family: Sora, sans-serif;">Privacy Policy</h1>
          <p class="lead">This page will be updated with the full privacy policy.</p>
          <p style="color: var(--soft-ink);">
            Last updated: {new Date().toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
          </p>
          <div style="margin-top: 24px;">
            <a class="btn ghost" href="/">Back to home</a>
          </div>
        </div>
      </main>
    </div>
  </div>
</Layout>

