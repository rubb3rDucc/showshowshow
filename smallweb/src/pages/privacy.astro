---
import Layout from '../layouts/Layout.astro';
import '../styles/home.css';

const title = 'Privacy Policy - ShowShowShow';
const description = 'Privacy Policy for ShowShowShow';
const appUrl = import.meta.env.PUBLIC_APP_URL || 'https://app.showshowshow.app';
---

<Layout title={title} description={description}>
  <div class="page">
    <header class="nav">
      <div class="nav-container">
        <a class="brand" href="/">ShowShowShow</a>
        <div class="nav-menu">
          <nav class="nav-links">
            <a href="/">Home</a>
            <a href="/terms">Terms</a>
            <a href="/contact">Contact</a>
          </nav>
          <a class="btn primary nav-cta-btn" href="/#waitlist">Join waitlist</a>
        </div>
      </div>
    </header>

    <div class="content">
      <main class="section">
        <div class="card" style="max-width: 900px; margin: 0 auto; text-align: center;">
          <h1 style="margin: 0 0 16px; font-family: Sora, sans-serif;">Privacy Policy</h1>
          <p style="color: var(--soft-ink); margin-bottom: 24px;">View our full privacy policy on iubenda.</p>
          <a href="https://www.iubenda.com/privacy-policy/97642526" class="btn primary" target="_blank" rel="noopener" title="Privacy Policy">View Privacy Policy</a>
          <div style="margin-top: 24px;">
            <a class="btn ghost" href="/">Back to home</a>
          </div>
        </div>
      </main>
    </div>
  </div>
</Layout>

