---
import Layout from '../layouts/Layout.astro';
import '../styles/home.css';

const title = 'Terms of Service - ShowShowShow';
const description = 'Terms of Service for ShowShowShow';
const appUrl = import.meta.env.PUBLIC_APP_URL || 'https://app.showshowshow.com';
---

<Layout title={title} description={description}>
  <div class="page">
    <div class="content">
      <header class="nav">
        <a class="brand" href="/">ShowShowShow</a>
        <div class="nav-menu">
          <div class="nav-section">
            <span class="nav-label">Explore</span>
            <nav class="nav-links">
              <a href="/">Home</a>
              <a href="/privacy">Privacy</a>
              <a href="/contact">Contact</a>
            </nav>
          </div>
          <div class="nav-section">
            <span class="nav-label">Actions</span>
            <div class="nav-cta">
              <a class="btn ghost" href={appUrl}>Open app</a>
              <a class="btn primary" href="/#waitlist">Get early access</a>
            </div>
          </div>
        </div>
      </header>

      <main class="section">
        <div class="card" style="max-width: 720px; margin: 0 auto;">
          <h1 style="margin: 0 0 16px; font-family: Sora, sans-serif;">Terms of Service</h1>
          <p class="lead">This page will be updated with the full terms of service.</p>
          <p style="color: var(--soft-ink);">
            Last updated: {new Date().toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
          </p>
          <div style="margin-top: 24px;">
            <a class="btn ghost" href="/">Back to home</a>
          </div>
        </div>
      </main>
    </div>
  </div>
</Layout>

