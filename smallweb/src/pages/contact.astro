---
import Layout from '../layouts/Layout.astro';
import '../styles/home.css';

const title = 'Contact - ShowShowShow';
const description = 'Contact ShowShowShow support';
const appUrl = import.meta.env.PUBLIC_APP_URL || 'https://app.showshowshow.com';
---

<Layout title={title} description={description}>
  <div class="page">
    <header class="nav">
      <div class="nav-container">
        <a class="brand" href="/">ShowShowShow</a>
        <div class="nav-menu">
          <nav class="nav-links">
            <a href="/">Home</a>
            <a href="/privacy">Privacy</a>
            <a href="/terms">Terms</a>
          </nav>
          <a class="btn primary nav-cta-btn" href="/#waitlist">Join waitlist</a>
        </div>
      </div>
    </header>

    <div class="content">
      <main class="section">
        <div class="card" style="max-width: 720px; margin: 0 auto;">
          <h1 style="margin: 0 0 16px; font-family: Sora, sans-serif;">Contact & Support</h1>
          <p class="lead">Need help or have questions? Weâ€™ll add the full contact form here.</p>
          <p style="color: var(--soft-ink);">
            For now, email us at <a href="mailto:hello@showshowshow.com">hello@showshowshow.com</a>.
          </p>
          <div style="margin-top: 24px;">
            <a class="btn ghost" href="/">Back to home</a>
          </div>
        </div>
      </main>
    </div>
  </div>
</Layout>

