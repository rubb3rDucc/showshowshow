---
const appUrl = import.meta.env.PUBLIC_APP_URL || 'https://app.showshowshow.com';
const registerUrl = `${appUrl}/register?trial=true`;
---

<section class="py-32 bg-black relative overflow-hidden">
  {/* Background Chaos */}
  <div class="absolute inset-0 opacity-20">
    <div class="absolute top-0 left-0 w-full h-full bg-pastel-mint transform -skew-y-12 scale-150"></div>
    <div class="absolute top-0 right-0 w-full h-full bg-pastel-pink transform skew-y-12 scale-150 mix-blend-multiply"></div>
  </div>

  <div class="max-w-4xl mx-auto px-4 text-center relative z-10">
    <div class="bg-white border-4 border-black p-8 md:p-12 shadow-hard transform rotate-1">
      <h2 class="text-3xl sm:text-4xl md:text-6xl lg:text-7xl font-black mb-8 uppercase leading-tight">
        READY TO TAKE{' '}
        <span class="bg-black text-white px-2 md:px-4 inline-block">
          CONTROL?
        </span>
      </h2>

      <p class="text-lg md:text-xl font-mono font-bold mb-12 max-w-2xl mx-auto border-y-4 border-black py-4 border-dashed">
        Start your 7-day free trial
      </p>

      <div class="flex flex-col items-center gap-6">
        <a
          href={registerUrl}
          class="bg-pastel-mint text-black border-4 border-black font-black uppercase text-xl md:text-2xl h-16 md:h-20 px-8 md:px-12 hover:bg-pastel-yellow hover:scale-105 hover:shadow-none shadow-hard transition-all w-full sm:w-auto flex items-center justify-center gap-3"
        >
          Start Free Trial
          <svg class="w-7 h-7" fill="black" stroke="black" viewBox="0 0 24 24" stroke-width="3">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </a>

        <p class="font-mono text-xs md:text-sm font-bold uppercase bg-pastel-pink px-3 py-2 border-2 border-black mb-4">
          7-day free trial • Credit card required • Cancel anytime • No charge until trial ends
        </p>
        
        {/* Trust Elements */}
        <div class="flex items-center justify-center gap-4 text-xs font-mono font-bold">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            <span>Secured by Stripe</span>
          </div>
          <div class="w-px h-4 bg-black"></div>
          <span>SSL Encrypted</span>
        </div>
      </div>
    </div>
  </div>
</section>
